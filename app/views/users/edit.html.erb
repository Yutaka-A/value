    <div class="edit-contents">
        <div class="link-2">
            <a href="/posts/index"><btn class="btn btn-lg btn-outline-secondary">投稿一覧</btn></a>
        </div>
        <div class="link">
            <%= link_to("/users/#{@user.id}") do %>
                <btn class="btn btn-lg btn-outline-secondary">戻る</btn>
            <% end %>

        </div>
        <div class="form-title">
            <h2>ユーザー<span>編集</span></h2>            
        </div>
        <%= @user.errors.full_messages.each do |message| %>
            <%= message %>
        <% end %>
        <%= form_tag("/users/#{@user.id}/update", {multipart: true}) do %>
            <div class="form-body">
                <!--<div class="user_images">-->
                <!--    <div class="question"><h3>ユーザー画像：</h3></div>-->
                <!--    <div class="answer">-->
                <!--        <input type="file" name="user_images" value="<%= "/user_images/#{@user.user_images}" %>">-->
                <!--    </div>-->
                <!--</div>-->
                <div class="name">
                    <div class="question"><h3>ユーザー名：</h3></div>
                    <div class="answer">
                        <input type="text" name="name" value="<%= @user.name %>">
                    </div>
                </div>
                <div class="email">
                    <div class="question"><h3>メールアドレス：</h3></div>
                    <div class="answer">
                        <input type="text" name="email" value="<%= @user.email %>">
                    </div>
                </div>
                <div class="name">
                    <div class="question"><h3>パスワード：</h3></div>
                    <div class="answer">
                        <input type="password" name="password" value="<%= @user.password %>">
                    </div>
                </div>
                <div class="submit">
                    <input type="submit" value="変更">
                </div>
            </div>
        <% end %>
    </div>